[colors]
background = #3c3647
foreground = #f1e9ef
highlight = #8c5576
alert = #a6c6d6
bar = #263238
mute = #b71c1c
i3active = #0277bd
i3activeline = #b71c1c

[bar/lamia]
width = 100%
height = 30
;offset-x = 50
;offset-y = 0
radius = 4.0
fixed-center = true

background = ${colors.bar}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-color = #00000000
border-top-size = 5
border-left-size = 15
border-right-size = 15
border-bottom-size = 0

padding = 2

module-margin-left = 1
module-margin-right = 1

font-0 = Meslo LG M DZ:pixelsize=12;2
font-1 = FontAwesome5Free:style=Solid:pixelsize=12
font-2 = DejaVuSans:style=Book:pixelsize=10

modules-left = i3 xwindow
modules-center = memory cpu temperature network
modules-right = volume date

tray-position = right
; tray-padding = 2
; tray-maxsize = 16

;wm-restack = i3

;override-redirect = true

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

label-layout = %layout%
label-layout-foreground = ${colors.highlight}

label-indicator-padding = 1

; [module/filesystem]
; type = internal/fs
; interval = 25

; mount-0 = /
; mount-1 = /data

; label-mounted = %mountpoint%: %free%
; label-mounted-foreground = ${colors.foreground}
; label-unmounted = %mountpoint% not mounted
; label-unmounted-foreground = ${colors.highlight}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
; pin-workspaces = true

label-mode-padding = 1
label-mode-foreground = ${colors.foreground}
label-mode-background = ${colors.highlight}

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-foreground = ${colors.foreground}
label-focused-background = ${colors.i3active}
label-focused-underline= ${colors.i3activeline}
label-focused-padding = 1

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = 1

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index%!
label-urgent-background = ${colors.alert}
label-urgent-foreground = ${colors.highlight}
label-urgent-padding = 1

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.foreground}
bar-width = 12
bar-indicator = |
bar-indicator-font = 6
bar-indicator-foreground = #bbffffff
bar-fill = ─
bar-fill-font = 6
bar-fill-foreground = #9f78e1
bar-empty = ─
bar-empty-font = 6
bar-empty-foreground = #44

label = %percentage%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.foreground}
label = %gb_free%

;[module/wlan]
;type = internal/network
;interface = wlp3s0
;interval = 1.0
;format-connected = <ramp-signal> <label-connected>
;label-connected = %signal%% ssid: %essid%

; format-disconnected = <label-disconnected>
; label-disconnected = %ifname% disconnected
; label-disconnected-foreground = ${colors.highlight}

; ramp-signal-0 = 
; ramp-signal-1 = 
; ramp-signal-2 = 
; ramp-signal-3 = 
; ramp-signal-4 = 
; ramp-signal-5 = 
; ramp-signal-foreground = ${colors.foreground}

[module/network]
type = internal/network
interface = enp0s31f6
interval = 3.0
label-connected =  %linkspeed%
label-connected-foreground = ${colors.foreground}

[module/date]
type = internal/date
interval = 5

date = "%a %d.%m.%Y"
time = "%H:%M"

;format-prefix = 
format-prefix-foreground = ${colors.highlight}

label =  %date%  %time%

[module/volume]

type = internal/pulseaudio
sink = alsa_output.pci-0000_00_1f.3.analog-stereo
interval = 5

format-volume = <ramp-volume> <label-volume>%

label-volume = %percentage%
label-muted = 
label-volume-foreground = ${colors.foreground}
label-muted-foreground = ${colors.mute}

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-foreground = ${colors.foreground}

bar-volume-width = 10
bar-volume-indicator = ━
bar-volume-fill = ━
bar-volume-empty = ─
bar-volume-foreground-0 = ${colors.foreground}
bar-volume-indicator-foreground = ${colors.foreground}
bar-volume-empty-foreground = ${colors.highlight}

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format =  <label>
format-warn = <label-warn>

label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.highlight}
label-warn-background = ${colors.alert}

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 5
margin-bottom = 5

[module/title]
type = internal/xwindow

; Seconds to sleep between progressbar/song timer sync
; Default: 1
interval = 2

; vim:ft=dosini
